<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inspection_cardview"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#F1E8E8"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:background="#Eaeff5"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/record_Num"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Inspection Number"
            android:textColor="#ec2028"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/site"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:elevation="12dp"
            android:gravity="center"
            android:text="Site"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>